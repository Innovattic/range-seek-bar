<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Example:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvRangeStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="10" />

        <com.innovattic.rangeseekbar.RangeSeekBar
            android:id="@+id/rangeSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            app:rsb_maxThumbOffsetHorizontal="2dp"
            app:rsb_minThumbOffsetHorizontal="-2dp"
            app:rsb_trackSelectedColor="@color/colorPrimary"
            app:rsb_trackSelectedThickness="2dp"
            app:rsb_trackThickness="20dp" />

        <TextView
            android:id="@+id/tvRangeEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="100" />
    </TableRow>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Other Examples:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.innovattic.rangeseekbar.RangeSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:rsb_initialMaxThumbValue="40"
        app:rsb_initialMinThumbValue="20"
        app:rsb_maxThumbDrawable="@drawable/thumb_circle"
        app:rsb_maxThumbOffsetHorizontal="2dp"
        app:rsb_minRange="10"
        app:rsb_minThumbDrawable="@drawable/thumb_circle"
        app:rsb_minThumbOffsetHorizontal="-2dp"
        app:rsb_trackColor="#888"
        app:rsb_trackSelectedColor="#222"
        app:rsb_trackSelectedThickness="4dp"
        app:rsb_trackThickness="2dp" />

    <com.innovattic.rangeseekbar.RangeSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:rsb_maxThumbDrawable="@drawable/thumb_circle"
        app:rsb_maxThumbOffsetVertical="4dp"
        app:rsb_minThumbDrawable="@drawable/thumb_circle"
        app:rsb_minThumbOffsetVertical="-4dp"
        app:rsb_trackColor="#888"
        app:rsb_trackSelectedColor="#222"
        app:rsb_trackSelectedThickness="4dp"
        app:rsb_trackThickness="2dp" />

    <com.innovattic.rangeseekbar.RangeSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:rsb_initialMaxThumbValue="15"
        app:rsb_max="20"
        app:rsb_maxThumbDrawable="@drawable/thumb_circle"
        app:rsb_maxThumbOffsetHorizontal="8dp"
        app:rsb_minRange="5"
        app:rsb_minThumbDrawable="@drawable/thumb_circle"
        app:rsb_minThumbOffsetHorizontal="-8dp"
        app:rsb_sidePadding="32dp"
        app:rsb_touchRadius="10dp"
        app:rsb_trackColor="#e0e1e5"
        app:rsb_trackRoundedCaps="true"
        app:rsb_trackSelectedColor="#a8d5f5"
        app:rsb_trackSelectedRoundedCaps="true"
        app:rsb_trackSelectedThickness="18dp"
        app:rsb_trackThickness="36dp" />

</LinearLayout>